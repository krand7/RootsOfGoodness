= form_for @receiver do |f|
  - if @receiver.errors.any?
    #error_explanation
      %h2
        = pluralize(@receiver.errors.count, "error")
        prohibited this receiver from being saved:
      %ul
        - @receiver.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :photo
    %br/
    = f.text_field :photo
  .field
    = f.label :trees
    %br/
    = f.number_field :trees
  .actions
    = f.submit
